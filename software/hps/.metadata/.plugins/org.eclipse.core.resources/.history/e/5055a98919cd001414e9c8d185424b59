#ifndef FIXED_POINT_H
#define	FIXED_POINT_H

/*
*********************************************************************************************************
*                                                 INCLUDE FILES
*********************************************************************************************************
*/ 

#include "system.h"

/*
*********************************************************************************************************
*                                                 DEFINES
*********************************************************************************************************
*/ 


/* global vars */

struct fixed {
	float input = 0.0;
    int integer = 0;
    float fraction = 0.0;
    uint32_t final_value = 0;
    int type = 0;
};

/* prototypes */
int float2fixed(struct fixed);

#endif	/* FIXED_POINT_H */
